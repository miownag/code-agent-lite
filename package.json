{
  "name": "code-agent-lite",
  "version": "0.1.0",
  "license": "MIT",
  "bin": {
    "code-lite": "dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "bun build src/cli.tsx --outfile dist/cli.js --target bun",
    "build:mac": "bun build --compile --minify --sourcemap --bytecode --target=bun-darwin-x64 ./src/cli.tsx --outfile dist-mac/cli",
    "dev": "bun --watch src/cli.tsx",
    "test": "prettier --check . && xo && ava",
    "format": "prettier --write ."
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@langchain/core": "^1.1.15",
    "@langchain/openai": "^1.2.2",
    "deepagents": "^1.5.0",
    "diff": "^8.0.3",
    "es-toolkit": "^1.44.0",
    "ink": "^4.1.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "langchain": "^1.2.10",
    "meow": "^11.0.0",
    "react": "^18.2.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/react": "^18.0.32",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ink-testing-library": "^3.0.0",
    "prettier": "^3.8.0",
    "react-devtools-core": "^7.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3",
    "xo": "^0.53.1"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off"
    }
  }
}
